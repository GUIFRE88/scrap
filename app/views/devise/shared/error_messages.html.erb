<% if resource.errors.any? %>
  <div class="alert alert-danger mb-4" role="alert" style="border-radius: 12px; border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2); border-left: 4px solid #dc2626;">
    <h6 class="alert-heading mb-2 fw-bold">Erro ao processar:</h6>
    <ul class="mb-0 ps-3">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
