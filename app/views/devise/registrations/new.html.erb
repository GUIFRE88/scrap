<div class="auth-container">
  <div class="auth-card fade-in">
    <div class="auth-card-header">
      <h2>Scrap</h2>
      <p>Crie sua conta</p>
    </div>
    
    <div class="auth-card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "form-label" do %>
            Email
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "seu@email.com" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "form-label" do %>
            Senha
            <% if @minimum_password_length %>
              <small class="text-muted ms-2">(<%= @minimum_password_length %> caracteres no mínimo)</small>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, placeholder: "••••••••" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "form-label" do %>
            Confirmar Senha
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true, placeholder: "••••••••" %>
        </div>

        <div class="d-grid gap-2 mb-4">
          <%= f.submit "Cadastrar", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <% if controller_name != 'sessions' %>
          <p class="mb-0 text-muted">
            Já tem uma conta? 
            <%= link_to "Entrar", new_session_path(resource_name), class: "btn btn-link p-0 ms-1" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
