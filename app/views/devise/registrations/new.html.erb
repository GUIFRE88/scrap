<div class="container">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <h2 class="h3 mb-3">Scrap</h2>
            <p class="text-muted">Crie sua conta</p>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" do %>
                Email
              <% end %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" do %>
                Senha
                <% if @minimum_password_length %>
                  <small class="text-muted">(<%= @minimum_password_length %> caracteres no mínimo)</small>
                <% end %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" do %>
                Confirmar Senha
              <% end %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", required: true %>
            </div>

            <div class="d-grid gap-2 mb-3">
              <%= f.submit "Cadastrar", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center">
            <% if controller_name != 'sessions' %>
              <%= link_to "Já tem uma conta? Entrar", new_session_path(resource_name), class: "btn btn-link" %><br />
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
