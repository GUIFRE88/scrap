<div class="auth-container">
  <div class="auth-card fade-in">
    <div class="auth-card-header">
      <h2>Scrap</h2>
      <p>Faça login na sua conta</p>
    </div>
    
    <div class="auth-card-body">
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert" style="border-radius: 12px; border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);">
          <strong>Erro:</strong> <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true, data: { turbo: false } }) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "form-label" do %>
            Email
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "seu@email.com" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "form-label" do %>
            Senha
          <% end %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true, placeholder: "••••••••" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-4 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Lembrar-me", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="d-grid gap-2 mb-4">
          <%= f.submit "Entrar", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <p class="mb-0 text-muted">
            Não tem uma conta? 
            <%= link_to "Cadastrar", new_registration_path(resource_name), class: "btn btn-link p-0 ms-1" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
