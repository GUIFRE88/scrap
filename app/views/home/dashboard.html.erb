<div class="dashboard-container">
  <div class="dashboard-card fade-in">
    <div class="text-center mb-4">
      <h1 class="display-4 mb-2" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 800;">
        Bem-vindo ao Scrap!
      </h1>
      <p class="lead text-muted mb-0">Sua plataforma de web scraping</p>
    </div>
    
    <div class="mt-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0 fw-bold">Perfis Github</h2>
        <%= link_to "Novo Perfil", new_profile_path, class: "btn btn-primary btn-sm" %>
      </div>
      
      <%= render "profiles/search_form" %>
      <%= render "profiles/list" %>
    </div>
  </div>
</div>
