<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0"><%= @profile.name %></h1>
    <div>
      <%= link_to "Editar", edit_profile_path(@profile), class: "btn btn-outline-secondary me-2" %>
      <%= button_to "Re-escanear", rescan_profile_path(@profile), method: :post, class: "btn btn-outline-warning me-2" %>
      <%= button_to "Excluir", profile_path(@profile), method: :delete, data: { confirm: "Tem certeza que deseja excluir este perfil?" }, class: "btn btn-outline-danger" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <% if @profile.avatar_url.present? %>
        <img src="<%= @profile.avatar_url %>" alt="Avatar" class="img-fluid rounded shadow-sm">
      <% else %>
        <div class="border rounded d-flex align-items-center justify-content-center" style="height: 200px;">
          <span class="text-muted">Sem imagem de perfil</span>
        </div>
      <% end %>
    </div>

    <div class="col-md-8">
      <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9"><%= @profile.name %></dd>

        <dt class="col-sm-3">URL Github</dt>
        <dd class="col-sm-9">
          <%= link_to @profile.github_url, @profile.github_url, target: "_blank", rel: "noopener" %>
        </dd>

        <dt class="col-sm-3">URL encurtada</dt>
        <dd class="col-sm-9">
          <% if @profile.short_code.present? %>
            <%= link_to short_profile_url(@profile.short_code), short_profile_url(@profile.short_code), target: "_blank", rel: "noopener" %>
          <% else %>
            -
          <% end %>
        </dd>

        <dt class="col-sm-3">Usuário Github</dt>
        <dd class="col-sm-9"><%= @profile.github_username %></dd>

        <dt class="col-sm-3">Followers</dt>
        <dd class="col-sm-9"><%= @profile.followers_count || 0 %></dd>

        <dt class="col-sm-3">Following</dt>
        <dd class="col-sm-9"><%= @profile.following_count || 0 %></dd>

        <dt class="col-sm-3">Stars</dt>
        <dd class="col-sm-9"><%= @profile.stars_count || 0 %></dd>

        <dt class="col-sm-3">Contribuições (último ano)</dt>
        <dd class="col-sm-9"><%= @profile.contributions_last_year || 0 %></dd>

        <dt class="col-sm-3">Organização</dt>
        <dd class="col-sm-9"><%= @profile.organization.presence || "-" %></dd>

        <dt class="col-sm-3">Localização</dt>
        <dd class="col-sm-9"><%= @profile.location.presence || "-" %></dd>

        <dt class="col-sm-3">Último scan</dt>
        <dd class="col-sm-9">
          <%= @profile.last_scanned_at ? @profile.last_scanned_at.strftime("%d/%m/%Y %H:%M") : "Nunca" %>
        </dd>
      </dl>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Voltar para o dashboard", dashboard_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

