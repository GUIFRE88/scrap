<div class="dashboard-container">
  <!-- Botões de ação -->
  <div class="profile-actions mb-4 fade-in">
    <div class="d-flex gap-2 flex-wrap">
      <%= link_to dashboard_path, class: "btn btn-action btn-back" do %>
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Voltar para o dashboard
      <% end %>
      <%= link_to edit_profile_path(@profile), class: "btn btn-action btn-edit" do %>
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Editar
      <% end %>
      <%= button_to rescan_profile_path(@profile), method: :post, class: "btn btn-action btn-rescan" do %>
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Re-escanear
      <% end %>
      <%= button_to profile_path(@profile), method: :delete, data: { confirm: "Tem certeza que deseja excluir este perfil?" }, class: "btn btn-action btn-delete" do %>
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Excluir
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <!-- Coluna esquerda: Avatar e informações básicas -->
    <div class="col-lg-4">
      <div class="profile-card fade-in">
        <div class="profile-card-body text-center">
          <div class="profile-avatar-wrapper mb-4">
            <% if @profile.avatar_url.present? %>
              <img src="<%= @profile.avatar_url %>" alt="Avatar" class="profile-avatar">
            <% else %>
              <div class="profile-avatar profile-avatar-placeholder">
                <svg width="80" height="80" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
            <% end %>
          </div>
          
          <h2 class="profile-name mb-3"><%= @profile.name %></h2>
          
          <% if @profile.github_username.present? %>
            <div class="profile-username mb-4">
              <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>@<%= @profile.github_username %></span>
            </div>
          <% end %>

          <div class="profile-actions-buttons d-grid gap-2">
            <%= link_to @profile.github_url, target: "_blank", rel: "noopener", class: "btn btn-primary btn-lg" do %>
              <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Ver no Github
            <% end %>
            
            <% if @profile.short_code.present? %>
              <%= link_to short_profile_url(@profile.short_code), target: "_blank", rel: "noopener", class: "btn btn-outline-primary btn-lg" do %>
                <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="me-2">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                URL Encurtada
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Coluna direita: Estatísticas e informações detalhadas -->
    <div class="col-lg-8">
      <!-- Cards de estatísticas -->
      <div class="row g-3 mb-4">
        <div class="col-md-3 col-6">
          <div class="stat-card stat-card-followers fade-in">
            <div class="stat-icon">
              <svg width="28" height="28" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="stat-value"><%= format_number(@profile.followers_count || 0) %></div>
            <div class="stat-label">Followers</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="stat-card stat-card-following fade-in">
            <div class="stat-icon">
              <svg width="28" height="28" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div class="stat-value"><%= format_number(@profile.following_count || 0) %></div>
            <div class="stat-label">Following</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="stat-card stat-card-stars fade-in">
            <div class="stat-icon">
              <svg width="28" height="28" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            </div>
            <div class="stat-value"><%= format_number(@profile.stars_count || 0) %></div>
            <div class="stat-label">Stars</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="stat-card stat-card-contributions fade-in">
            <div class="stat-icon">
              <svg width="28" height="28" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div class="stat-value"><%= format_number(@profile.contributions_last_year || 0) %></div>
            <div class="stat-label">Contribuições</div>
          </div>
        </div>
      </div>

      <!-- Card com informações detalhadas -->
      <div class="profile-details-card fade-in">
        <div class="profile-details-header">
          <h3 class="profile-details-title">Informações Detalhadas</h3>
        </div>
        <div class="profile-details-body">
          <div class="detail-item">
            <div class="detail-label">Nome</div>
            <div class="detail-value"><%= @profile.name %></div>
          </div>

          <div class="detail-item">
            <div class="detail-label">URL Github</div>
            <div class="detail-value">
              <%= link_to @profile.github_url, @profile.github_url, target: "_blank", rel: "noopener", class: "detail-link" %>
            </div>
          </div>

          <% if @profile.short_code.present? %>
            <div class="detail-item">
              <div class="detail-label">URL encurtada</div>
              <div class="detail-value">
                <%= link_to short_profile_url(@profile.short_code), short_profile_url(@profile.short_code), target: "_blank", rel: "noopener", class: "detail-link" %>
              </div>
            </div>
          <% end %>

          <% if @profile.organization.present? %>
            <div class="detail-item">
              <div class="detail-label">Organização</div>
              <div class="detail-value"><%= @profile.organization %></div>
            </div>
          <% end %>

          <% if @profile.location.present? %>
            <div class="detail-item">
              <div class="detail-label">Localização</div>
              <div class="detail-value"><%= @profile.location %></div>
            </div>
          <% end %>

          <div class="detail-item">
            <div class="detail-label">Último scan</div>
            <div class="detail-value">
              <% if @profile.last_scanned_at %>
                <span class="badge-scan">
                  <%= @profile.last_scanned_at.strftime("%d/%m/%Y %H:%M") %>
                </span>
              <% else %>
                <span class="text-muted">Nunca</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
